<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <color name="button_text">#0B486B</color>
    <style name="KPTheme_AdriftInDreams_Button_AddToBag" parent="@android:style/Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_wh_normal</item>
    </style>

    <color name="KPTheme_AdriftInDreams_colorSeaFoaming">#A8DBA8</color>
    <color name="KPTheme_AdriftInDreams_colorSunlitSea">#CFF09E</color>
    <color name="KPTheme_AdriftInDreams_colorSeaShowingGreen">#79BD9A</color>
    <color name="KPTheme_AdriftInDreams_colorPrimaryDark">#00796B</color>
    <color name="KPTheme_AdriftInDreams_colorPrimary">#3B8686</color>
    <color name="KPTheme_AdriftInDreams_colorAccent">#0B486B</color>
    <color name="KPTheme_AdriftInDreams_ActionBarText_Color">#FFFFFF</color>
    <style name="actionbar_r1_titletext" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/KPTheme_AdriftInDreams_ActionBarText_Color</item>
    </style>

    <style name="KPTheme_AdriftInDreams_ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/KPTheme_AdriftInDreams_colorPrimary</item>
        <item name="titleTextStyle">@style/actionbar_r1_titletext</item>
    </style>

    <style name="Theme.KPTheme_AdriftInDreams" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/KPTheme_AdriftInDreams_ActionBarStyle</item>
        <item name="colorPrimary">@color/KPTheme_AdriftInDreams_colorPrimary</item>
        <item name="colorPrimaryDark">@color/KPTheme_AdriftInDreams_colorPrimaryDark</item>
        <item name="colorAccent">@color/KPTheme_AdriftInDreams_colorAccent</item>
        <item name="bAddToBag">@style/KPTheme_AdriftInDreams_Button_AddToBag</item>
    </style>

</resources>
