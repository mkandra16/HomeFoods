<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.apps.b3bytes.homefoods.activities.ChefDishEdit">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/etDishEditDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="@string/etDishEditDishNameHint"
                android:singleLine="true"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />

            <AutoCompleteTextView
                android:id="@+id/acTvDishEditCuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etDishEditDishName"
                android:layout_below="@+id/etDishEditDishName"
                android:layout_marginTop="12dp"
                android:hint="Cuisine"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />


            <CheckBox
                android:id="@+id/cbDishEditVegan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/acTvDishEditCuisine"
                android:layout_below="@+id/acTvDishEditCuisine"
                android:layout_marginTop="12dp"
                android:text="Vegetarian"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/etDishEditPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cbDishEditVegan"
                android:layout_marginTop="12dp"
                android:hint="Price per unit"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDishEditQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/etDishEditPrice"
                android:layout_marginTop="12dp"
                android:hint="Number of units available"
                android:singleLine="true"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />

            <include
                android:id="@+id/lDishEditFromDatePicker"
                layout="@layout/date_time_picker_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDishEditQuantity"
                android:layout_marginTop="12dp" />

            <include
                android:id="@+id/lDishEditToDatePicker"
                layout="@layout/date_time_picker_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lDishEditFromDatePicker"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:id="@+id/llDishEditPickupDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lDishEditToDatePicker"
                android:layout_below="@+id/lDishEditToDatePicker"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/cbDishEditPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick Up"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cbDishEditDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/llDishEditPickupDelivery"
                android:layout_below="@+id/llDishEditPickupDelivery"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvDishEditDishImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Upload Dish Image"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivDishEditDishImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/tvDishEditDishImage"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/south_indian_breakfast_01" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>