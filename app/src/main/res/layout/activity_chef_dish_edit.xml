<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.b3bytes.homefoods.activities.ChefDishEdit">

    <EditText
        android:id="@+id/etDishEditDishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="@string/etDishEditDishNameHint"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/spDishEditCuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etDishEditDishName"
        android:layout_below="@+id/etDishEditDishName"
        android:layout_marginTop="12dp" />


    <CheckBox
        android:id="@+id/cbDishEditVegan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spDishEditCuisine"
        android:layout_below="@+id/spDishEditCuisine"
        android:layout_marginTop="24dp"
        android:text="Yes" />


    <EditText
        android:id="@+id/etDishEditPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cbDishEditVegan"
        android:layout_marginTop="12dp"
        android:hint="Price per unit"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etDishEditQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etDishEditPrice"
        android:layout_marginTop="12dp"
        android:hint="Number of units available"
        android:singleLine="true" />

    <include
        layout="@layout/date_time_picker_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/lDishEditFromDatePicker"
        android:layout_below="@+id/etDishEditQuantity" />

    <include
        layout="@layout/date_time_picker_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lDishEditToDatePicker"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/lDishEditFromDatePicker" />




</RelativeLayout>
