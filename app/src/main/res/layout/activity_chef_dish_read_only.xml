<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.apps.b3bytes.homefoods.activities.ChefDishEdit">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvDishEditDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/etDishEditDishNameHint"
                android:textStyle="bold"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/TvDishEditCuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvDishEditDishName"
                android:layout_below="@+id/tvDishEditDishName"
                android:layout_marginTop="12dp"
                android:text="Cuisine"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="20sp" />


            <CheckBox
                android:id="@+id/cbDishEditVegan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TvDishEditCuisine"
                android:layout_below="@+id/TvDishEditCuisine"
                android:layout_marginTop="12dp"
                android:text="Vegetarian"
                android:clickable="false"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvDishEditPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cbDishEditVegan"
                android:layout_marginTop="12dp"
                android:text="Price per unit - 175"
                android:singleLine="true"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDishEditQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvDishEditPrice"
                android:layout_marginTop="12dp"
                android:text="Number of units available - 25"
                android:singleLine="true"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textSize="16sp" />

            <include
                android:id="@+id/lDishEditFromDatePicker"
                layout="@layout/date_time_read_only_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDishEditQuantity"
                android:layout_marginTop="12dp" />

            <include
                android:id="@+id/lDishEditToDatePicker"
                layout="@layout/date_time_read_only_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lDishEditFromDatePicker"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:id="@+id/llDishEditPickupDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lDishEditToDatePicker"
                android:layout_below="@+id/lDishEditToDatePicker"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/cbDishEditPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pick Up"
                    android:clickable="false"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cbDishEditDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delivery"
                    android:clickable="false"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/llDishEditPickupDelivery"
                android:layout_below="@+id/llDishEditPickupDelivery"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvDishEditDishImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Dish Image"
                    android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivDishEditDishImage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/tvDishEditDishImage"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/south_indian_breakfast_01" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>