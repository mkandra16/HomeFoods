<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProfile"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_gravity="start"
    android:background="@color/nav_drawer_profile_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/south_indian_breakfast_01" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivUserProfile"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivUserProfile"
        android:layout_toRightOf="@+id/ivUserProfile"
        android:text="Foodie Name"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/tvUserName"
        android:layout_marginTop="2dp"
        android:text="test@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
</RelativeLayout>