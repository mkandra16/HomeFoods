<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlReviewOrderOneDishEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvOrderReviewDishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/INR"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishPrice"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/tvOrderReviewDishPrice"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishQuantity"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/tvOrderReviewDishQuantity"
        android:text="Dish Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOrderReviewDishQuantity"
        android:layout_below="@+id/tvOrderReviewDishQuantity"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvOrderReviewDishQuantityNum"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvOrderReviewDishQuantityNum"
        android:paddingBottom="16dp"
        android:text="Change"
        android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
        android:textSize="10sp"
        android:textStyle="bold" />

    <!--    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvOrderReviewDishQuantityChange"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />-->

</RelativeLayout>