<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/dishOne"
                layout="@layout/one_dish_in_more_dishes" />

            <include
                android:id="@+id/dishTwo"
                layout="@layout/one_dish_in_more_dishes" />

            <include
                android:id="@+id/dishThree"
                layout="@layout/one_dish_in_more_dishes" />

            <include
                android:id="@+id/dishFour"
                layout="@layout/one_dish_in_more_dishes" />

            <Button
                android:id="@+id/bMoreDishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="See More ..."
                android:textAllCaps="false"
                android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>