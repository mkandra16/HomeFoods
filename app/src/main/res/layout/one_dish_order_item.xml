<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlReviewOrderOneDishEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvOrderReviewDishPrice"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/INR"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishPrice"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/tvOrderReviewDishPrice"
        android:text="Quantity"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishQuantity"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/tvOrderReviewDishQuantity"
        android:text="Dish Name"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOrderReviewDishQuantity"
        android:layout_below="@+id/tvOrderReviewDishQuantity"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvOrderReviewDishQuantityNum"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvOrderReviewDishQuantityNum"
        android:clickable="true"
        android:paddingBottom="16dp"
        android:text="Change"
        android:textColor="@color/KPTheme_AdriftInDreams_colorAccent"
        android:textSize="10sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etOrderReviewDishQuantityNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishQuantityUpdate"
        android:layout_below="@+id/tvOrderReviewDishName"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/tvOrderReviewDishQuantity"
        android:ems="3"
        android:inputType="number"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOrderReviewDishQuantity"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/etOrderReviewDishQuantityNum"
        android:clickable="true"
        android:text="Update"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOrderReviewDishQuantityDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvOrderReviewDishQuantityUpdate"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tvOrderReviewDishQuantityUpdate"
        android:clickable="true"
        android:text="Delete"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!--    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvOrderReviewDishQuantityChange"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />-->

</RelativeLayout>